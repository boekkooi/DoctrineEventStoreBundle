{
    "name": "boekkooi/doctrine-eventstore-bundle",
    "description": "An event store implementation for doctrine",
    "type": "symfony-bundle",
    "keywords": [ "doctrine", "symfony", "eventstore" ],
	"authors": [{
		"name": "Warnar Boekkooi",
		"email": "warnar@boekkooi.net"
	}],
    "autoload": {
        "psr-4": {
            "Boekkooi\\Bundle\\DoctrineEventStoreBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Boekkooi\\Bundle\\DoctrineEventStoreBundle\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4",
        "symfony/framework-bundle": "~2.3",
        "doctrine/doctrine-bundle": "~1.0",
        "jms/serializer-bundle": "~0.13",
        "rhumsaa/uuid": "~2.8"
    },
    "require-dev": {
        "doctrine/orm": "~2.4",

        "phake/phake":"@stable",
        "phpunit/phpunit": "~4.0",
        "fabpot/php-cs-fixer": "0.5.7"
    }
}
